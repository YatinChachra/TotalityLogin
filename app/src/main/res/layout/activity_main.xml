<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.totalitylogin.MainActivity">

    <ImageView
        android:src="@drawable/totality_logo"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        />


    <View
        android:layout_height="@dimen/viewSize"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_marginTop="@dimen/marginTop"
        android:padding="@dimen/padding"
        />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="@dimen/marginTop"
        android:padding="@dimen/padding"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgrey"
        android:background="@drawable/customeditext"
        android:textCursorDrawable="@null"
        android:fontFamily="sans-serif-medium"
        />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_marginTop="@dimen/marginTop"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgrey"
        android:background="@drawable/customeditext"
        android:textCursorDrawable="@null"
        android:fontFamily="sans-serif-medium"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button_label"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_marginTop="@dimen/marginTop"
        android:background="@drawable/customebutton"
        android:fontFamily="sans-serif-medium"
        android:onClick="loginButton"
        />


    <View
        android:layout_height="@dimen/viewSize"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_marginTop="@dimen/marginTop"
        />


</LinearLayout>
